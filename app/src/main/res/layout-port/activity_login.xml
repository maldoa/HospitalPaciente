<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:id="@+id/registro_activity"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        android:theme="@style/Progress"
        android:visibility="gone" />


    <TextView
        android:id="@+id/titulo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="clip_horizontal|center|center_horizontal|center_vertical"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="@string/titulo1"
        android:textSize="40sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/subtitulo5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="clip_horizontal|center|center_horizontal|center_vertical"
        android:paddingTop="10sp"
        android:text="@string/subtitulo3"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="200dp"
        android:layout_height="178dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/call" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linearLayoutFilaSei1s1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fondo131"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/fondo_2" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/float_label_user_id"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary">

                    <EditText
                        android:id="@+id/user_id"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_user_id"
                        android:inputType="text"
                        android:textSize="36dp"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary" />

                </com.google.android.material.textfield.TextInputLayout>


                <ImageView
                    android:id="@+id/fondo2114"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    app:srcCompat="@drawable/fondo_2" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutFilaSeis1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fondo31"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/fondo_2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/float_label_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"

                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/prompt_password"
                        android:imeActionLabel="@string/action_sign_in_short"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="36dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>


                <ImageView
                    android:id="@+id/fondo114"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    app:srcCompat="@drawable/fondo_2" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutFilaSeis"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fondo3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/fondo_2" />
                <Button
                    android:id="@+id/email_sign_in_button"
                    android:layout_width="0dp"
                    android:textSize="32dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/action_sign_in"
                    android:textColor="@color/colorAccent"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:elevation="2dp"
                    android:textStyle="bold"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    />

                <ImageView
                    android:id="@+id/fondo4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    app:srcCompat="@drawable/fondo_2" />


            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
