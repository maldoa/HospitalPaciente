<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo2"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayoutFilaUno"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fondo1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/fondo_2"  android:layout_width="0dp"/>

        <TextView
            android:id="@+id/subtitulo5"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="clip_horizontal|center|center_horizontal|center_vertical"
            android:text="Monitoreo de tu salud"
            android:textSize="30sp"
            android:textStyle="bold"  android:layout_width="0dp"/>

        <ImageView
            android:id="@+id/fondo2"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/fondo_2"  android:layout_width="0dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutFilaDos"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0sp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/descricionListaMedir"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="clip_horizontal|center|center_horizontal|center_vertical"
            android:text="Se visualizan los datos de los sensores del paciente."
            android:textSize="20sp"
            android:textStyle="normal"  android:layout_width="0dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayou32dftFilaTres"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtReceive1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ID paciente:"
            android:textSize="24sp"  android:layout_width="0dp"/>

        <EditText
            android:text="1"
            android:id="@+id/activity_id_paciente"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:enabled="false"
            android:textColor="@color/design_default_color_error"
            android:inputType="numberDecimal"
            android:layout_width="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayou4dftFilaTres"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtReceive"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Oxímetro (%):"
            android:textSize="24sp"  android:layout_width="0dp"/>

        <EditText
            android:id="@+id/activity_saturacion_oxigeno"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="92.1"
            android:textColor="@color/design_default_color_error"
            android:inputType="numberDecimal"
             android:layout_width="0dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutFirlaTres"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" android:layout_height="0dp">

        <TextView
            android:id="@+id/textV3iew"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Temperatura (°C):"
            android:textSize="24sp"  android:layout_width="0dp"/>

        <EditText
            android:id="@+id/activity_temperatura"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="36.1"
            android:textColor="@color/design_default_color_error"
            android:inputType="numberDecimal"
             android:layout_width="0dp"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayoutFilaD3os"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" android:layout_height="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Frecuencia cardíaca (lpm):"
            android:textSize="24sp"  android:layout_width="0dp"/>

        <EditText
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/design_default_color_error"
            android:textSize="24sp"
            android:text="18"
            android:id="@+id/activity_frec_cardiaca"
            android:inputType="numberDecimal"
             android:layout_width="0dp"/>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linearLayoutFila8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text8View44"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Frecuencia respiratoria (rpm):"
            android:textSize="24sp"  android:layout_width="0dp"/>
        <EditText
            android:id="@+id/activity_frec_respiratoria"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/design_default_color_error"
            android:inputType="numberDecimal"
            android:text="0"
            android:textSize="24sp" android:layout_width="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFila66T77711res"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" android:layout_height="0dp">

        <TextView
            android:id="@+id/te1xtView"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Presión arterial sistolica(mmHg):"
            android:textSize="24sp"  android:layout_width="0dp"/>


        <EditText
            android:id="@+id/activity_pres_art_sistolica"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:inputType="numberDecimal"
            android:textColor="@color/design_default_color_error"
            android:textSize="24sp"  android:layout_width="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutdebug"
        android:layout_width= "match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text8View"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Presión arterial diastolica(mmHg):"
            android:textSize="24sp"  android:layout_width="0dp"/>

        <EditText
            android:id="@+id/activity_pres_art_diastolica"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/design_default_color_error"
            android:textSize="24sp"  android:layout_width="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFilaSeis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:paddingTop="50sp">

        <ImageView
            android:id="@+id/fondo3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/fondo_2" />

        <Button
            android:id="@+id/activity_comments_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="Actualizar"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/fondo4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            app:srcCompat="@drawable/fondo_2" />


    </LinearLayout>

</LinearLayout>
